<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/help_illustration"
            android:layout_width="295dp"
            android:layout_height="236dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/help_illustration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis_thin"
            android:text="Subject"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/profile_help_subject"
            app:layout_constraintLeft_toLeftOf="@id/profile_help_subject" />

        <EditText
            android:id="@+id/profile_help_subject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/metropolis_semibold"
            android:hint="write your subject here!"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_illustration"
            app:layout_constraintWidth_percent=".8" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis_thin"
            android:text="Message"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/profile_help_message"
            app:layout_constraintLeft_toLeftOf="@id/profile_help_message" />

        <EditText
            android:id="@+id/profile_help_message"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/metropolis_thin"
            android:gravity="top"
            android:hint="write your message here!"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_help_subject"
            app:layout_constraintWidth_percent=".8" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="?attr/actionBarSize"
            android:fontFamily="@font/metropolis_semibold"
            android:id="@+id/help_send"
            android:text="send"
            android:textAllCaps="false"
            app:backgroundTint="@color/purple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_help_message"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>