<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    android:background="@drawable/cart_item_backgroung"
    android:elevation="3dp"
    android:padding="10dp"
    android:paddingEnd="0dp">

    <ImageView
        android:id="@+id/cart_item_picture"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_item_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintLeft_toRightOf="@id/cart_item_picture"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/metropolis_bold"
        android:textColor="@color/dark_blue"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_item_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/metropolis_semibold"
        android:textColor="@color/dark_blue"
        app:layout_constraintLeft_toRightOf="@id/cart_item_picture"
        app:layout_constraintTop_toBottomOf="@id/cart_item_name" />

    <TextView
        android:id="@+id/cart_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/metropolis_semibold"
        android:textColor="@color/dark_blue"
        app:layout_constraintLeft_toRightOf="@id/cart_item_picture"
        app:layout_constraintTop_toBottomOf="@id/cart_item_units" />

    <TextView
        android:id="@+id/cart_item_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/metropolis_semibold"
        android:textColor="@color/dark_blue"
        app:layout_constraintLeft_toRightOf="@id/cart_item_picture"
        app:layout_constraintTop_toBottomOf="@id/cart_item_unit_price" />

</androidx.constraintlayout.widget.ConstraintLayout>